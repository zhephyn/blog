<div>
    <div>
        <h1>Edit existing post</h1>
    </div>

    <div>
        <%= form_with(model: @post, url: post_path(@post), method: "put") do |form| %>
            <%= form.label :title %>
            <%= form.text_field :title %>
            <%= form.label :body %>
            <%= form.text_area :body, size: "70x5" %>
            <%= form.submit %>
        <% end %>
    </div>

    <div>
        <%= button_to "Back to Home Page", posts_path, method: :get %>
    </div>
</div>
